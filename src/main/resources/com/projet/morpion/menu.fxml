<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.projet.morpion.controller.MenuController">
   <children>
      <MenuBar prefHeight="25.0" prefWidth="70.0">
        <menus>
          <Menu mnemonicParsing="false" text="IA">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#onClickSettings" text="Settings" />
                  <MenuItem mnemonicParsing="false" onAction="#modelButtonPressed" text="Model" />
                  <MenuItem mnemonicParsing="false" onAction="#onClickTrain" text="Train" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <AnchorPane prefHeight="400.0" prefWidth="600.0">
         <children>
            <Button alignment="TOP_CENTER" layoutX="131.0" layoutY="67.0" mnemonicParsing="false" onAction="#humanVShuman" prefHeight="71.0" prefWidth="317.0" text="H   vs.   H">
               <font>
                  <Font size="36.0" />
               </font>
            </Button>
            <Button alignment="TOP_CENTER" layoutX="132.0" layoutY="193.0" mnemonicParsing="false" onAction="#humanVSai" prefHeight="107.0" prefWidth="317.0" text="H   vs.   AI">
               <font>
                  <Font size="36.0" />
               </font>
            </Button>
            <CheckBox fx:id="easy" layoutX="173.0" layoutY="269.0" mnemonicParsing="false" onAction="#easyCheck" text="Easy" />
            <CheckBox fx:id="medium" layoutX="258.0" layoutY="269.0" mnemonicParsing="false" onAction="#mediumCheck" text="Medium" />
            <CheckBox fx:id="hard" layoutX="359.0" layoutY="269.0" mnemonicParsing="false" onAction="#hardCheck" text="Hard" />
         </children></AnchorPane>
   </children>
</VBox>
